#!/bin/bash

hook_name="$(basename ${0})"
logger "avahi.${hook_name}: Entering the hook"

mkdir -p ${SNAP_COMMON}/etc

if [ ! -d ${SNAP_COMMON}/etc/avahi ]; then
    cp -r ${SNAP}/etc/avahi ${SNAP_COMMON}/etc
fi

